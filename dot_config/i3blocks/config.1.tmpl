# i3blocks configuration file
#
# The i3blocks man page describes the usage of the binary,
# and its website describes the configuration:
#
#     https://vivien.github.io/i3blocks

# i3blocks-contrib scripts here
## unfortunately cannot add custom variable names
SCRIPT_DIR=/usr/lib/i3blocks
{{ $local_scripts := "~/.local/lib/i3blocks" }}
# Global properties
separator=true
separator_block_width=16
markup=pango

[mediaplayer]
command=$SCRIPT_DIR/mediaplayer
instance=mpd
interval=30
signal=2

[backlight]
command=$SCRIPT_DIR/backlight
label=☀
interval=1
STEP_SIZE=10

[disk]
command=$SCRIPT_DIR/disk
LABEL=/ 
DIR=/
ALERT_LOW=10
interval=60

[btrfs-meta]
command={{- $local_scripts -}}/btrfs-meta
interval=1
BTRFS=/

[mpc-volume*]
command={{- $local_scripts -}}/mpc-volume
interval=once
signal=2

[volume-pipewire*]
# command=$SCRIPT_DIR/volume-pipewire
command={{- $local_scripts -}}/volume-pipewire
interval=once
signal=1
AUDIO_HIGH_SYMBOL=
AUDIO_MED_SYMBOL=
AUDIO_LOW_SYMBOL=
AUDIO_MUTED_SYMBOL=
LONG_FORMAT="${SYMB} ${VOL}%"
SHORT_FORMAT="${SYMB} ${VOL}%"
MUTED_COLOR="#cc0000"

[miccontrol*]
command={{- $local_scripts -}}/miccontrol
interval=once
signal=3
SOURCE=49
#  

[battery2]
command=$SCRIPT_DIR/battery2
interval=5

[iface.thunderbolt0]
command=$SCRIPT_DIR/iface
LABEL=
IFACE=thunderbolt0
color=#0077FF
interval=5

[openvpn-systemd]
# requires JSON/Parse.pm
command=$SCRIPT_DIR/openvpn-systemd
interval=10
label=V 

[iface.tun?{0}]
command={{- $local_scripts -}}/iface
LABEL=
IFACE=tun?
SELECT=0
color=#7777FF
interval=10

[iface.tun?{1}]
command={{- $local_scripts -}}/iface
LABEL=
IFACE=tun?
SELECT=1
color=#7777FF
interval=10

[ssid]
command=$SCRIPT_DIR/ssid
interval=10
INTERFACE=wlan0

[iface.wlan?{0}]
command={{- $local_scripts -}}/iface
LABEL=
IFACE=wlan0
SELECT=0
color=#00FF00
interval=10

[iface.en*{0}]
command={{- $local_scripts -}}/iface
LABEL=
IFACE=en*
SELECT=0
color=#cc32cc
interval=10

[dunst]
command=$SCRIPT_DIR/dunst
interval=once
format=json

[time1]
command=date '+%a %FT%T-%Z'
TZ={{- .time1 }}
color=#02ca48
interval=1
