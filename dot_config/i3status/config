general {
  colors = true
  interval = 1
}

# order += "ipv6"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "disk /"
order += "load"
order += "memory"
order += "volume master"
order += "cpu_temperatore 0"
order += "tztime local"

volume master {
  format = "â™ª%volume%%"
  format_muted = "ðŸ”‡"
}

wireless _first_ {
  format_up = "W=%ip"
  format_down = "W"
}

ethernet _first_ {
  format_up = "E=%ip"
  format_down = ""
}

battery all {
  # format = "B=%status:%percentage"
  format = "%status:%percentage~%remaining"
  format_down = "NOBAT"
  status_chr = "âš¡CHR"
  status_bat = "ðŸ”‹BAT"
  status_unk = "?UNK"
  status_full = "â˜»FUL"

}

disk "/" {
  format = "/=%avail"
}

load {
  format = "L=%5min"
}

cpu_temperature 0 {
  format = "T=%degreesÂ°C"
}

memory {
  format = "M=[+%used:-%available]"
  threshold_degraded = "1G"
  format_degraded = "M!=[+%used:-%available]"
}

tztime local {
  # Thu 2022-01-06T23:27:29-GMT
  format = "%a %FT%T-%Z"
}
